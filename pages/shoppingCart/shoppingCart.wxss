/* pages/shoppingCart/shoppingCart.wxss */
.shopItem {
  display: flex;
  width: 100%;
  height: 100px;
  position: relative;

  /* background: #000; */
}
/*圆*/
.shopItem-circle-wrapper {
  width: 75px;
  height: 100px;
  /* background: yellow; */
  position: relative;
}
.circle {
  width: 25px;
  height: 25px;
  /* background: red; */
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -12.5px;
  margin-top: -12.5px;
  border-radius: 50px;
  border: 2px solid #eee;
}
/*图片*/
.shopItem-image-wrapper {
  width: 150px;
  height: 100px;
  /* background: red; */
}
/*内容*/
.shopItem-main {
  display: flex;
  flex-direction: column;
}
.shopItem-main-title {
  /* background: green; */
  display: inline-block;
  width: 150px;
  font-size: 20px;
  padding-top: 20px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shopItem-main-price {
  display: inline-block;
  padding-top: 20px;
}

/*鼠标点击圆变红*/
.active {
  background: orangered;
}

.chooseBtn {
  display: flex;
  border: 1px solid #eee;
  width: 100px;
  height: 40px;
  line-height: 40px;
  position: absolute;
  right: 10px;
  top: 55px;
}
.num {
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}
.reduce, .add {
  width: 29px;
  text-align: center
}
.reduce {
  border-right: 1px solid #eee;
}
.add {
  border-left: 1px solid #eee;
}
.bottom {
  position: fixed;
  height: 80px;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #eee;
}
.total {
  display: inline-block;
  width: 160px;
  height: 80px;
  line-height: 80px;
}
.total-btn{
  height: 80px;
  line-height: 80px;
  text-align: center;
  background: orangered
}