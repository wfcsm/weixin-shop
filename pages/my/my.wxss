/* pages/my/my.wxss */
.container{
  background: #eee;
}
.userInfo {
  width: 100%;
  height: 150px;
  background: #2B2B2B;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userInfo-btn {
  width: 100px;
  height: 40px;
  line-height: 40px;
  background: orangered;
  color: white;
}
.userInfo-img {
  width: 60px;
  height: 60px;
  border-radius: 30px;
}
.userInfo-name {
  padding-top: 20px;
  color: white;
  font-size: 20px;
}
.main {
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.main-item {
  width: 100%;
  /* width: 300px; */
  height: 45px;
  position: relative;
  background: white;
  border-radius: 0.5px;
  border-bottom:1px solid rgb(226, 225, 225);

}
.main-item-img {
  width: 25px;
  height: 25px;
  padding: 10px;
}
.main-item-font {
  display: inline-block;
  position: absolute;
  top: 15px;
  font-size: 15px;
}
.main-item-img-left {
  width: 25px;
  height: 25px;
  position: absolute;
  right: 10px;
  top: 10px;
}